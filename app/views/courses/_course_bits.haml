%li
  .span4
    %h4
      =course.title
      %span.institution
        #{course.institution.name}
        - if course.institution.dropout_rate.present?
          (Dropouts: #{course.institution.dropout_rate}%)
    %p
      %span.salary #{number_to_currency(course.the_salary.instmed, {:unit => '£', :precision => 0})}
      %span.range
        (#{number_to_currency(course.the_salary.instlq, {:unit => '£', :precision => 0})}&mdash;
        #{number_to_currency(course.the_salary.instuq, {:unit => '£', :precision => 0})})

  .span1
    %a.stuff-link{:href => course.course_url} i
    - if course.the_salary.instmed < 17800
      %a.danger-link{:href => '#'} !
